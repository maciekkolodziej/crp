- model_class = ProductPrice
.page-header
  .btn-toolbar.pull-right
    = link_to t('.new', :default => t("helpers.links.new")), new_product_price_path, :class => 'btn btn-primary'
    = link_to t('.destroy', :default => t("helpers.links.destroy")), product_price_path(@product_price), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_product_price_path(@product_price), :class => 'btn'
    = link_to t('.back', :default => t("helpers.links.back")), product_prices_path, :class => 'btn'
  
  %h1=t '.title', :default => model_class.model_name.human.titleize

%dl.dl-horizontal
  %dt= model_class.human_attribute_name(:product) + ':'
  %dd= link_to show(@product_price.product.name), product_path(@product_price.product)
  %dt= model_class.human_attribute_name(:store) + ':'
  %dd= link_to show(@product_price.store.symbol), store_path(@product_price.store)
  %dt= model_class.human_attribute_name(:sale_price) + ':'
  %dd= show(@product_price.sale_price)
.form-actions
