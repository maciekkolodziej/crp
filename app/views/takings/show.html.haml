- model_class = Taking
.page-header
  .btn-toolbar.pull-right
    = link_to t('.new', :default => t("helpers.links.new")), new_taking_path, :class => 'btn btn-primary'
    = link_to t('.destroy', :default => t("helpers.links.destroy")), taking_path(@taking), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_taking_path(@taking), :class => 'btn'
    = link_to t('.back', :default => t("helpers.links.back")), takings_path, :class => 'btn'
  
  %h1=t '.title', :default => model_class.model_name.human.titleize

%dl.dl-horizontal
  %dt= model_class.human_attribute_name(:store_id) + ':'
  %dd= link_to @taking.store.symbol, store_path(@taking.store_id)
  %dt= model_class.human_attribute_name(:date) + ':'
  %dd= show(@taking.date)
  %dt= model_class.human_attribute_name(:value) + ':'
  %dd= show(@taking.value)
  %dt= model_class.human_attribute_name(:card_payments) + ':'
  %dd= show(@taking.card_payments)
  %dt= model_class.human_attribute_name(:cash_payments) + ':'
  %dd= show(@taking.cash_payments)
.form-actions