- model_class = ProductAlias
.page-header
  .btn-toolbar.pull-right
    = link_to t('.new', :default => t("helpers.links.new")), new_product_alias_path, :class => 'btn btn-primary'
    = link_to t('.destroy', :default => t("helpers.links.destroy")), product_alias_path(@product_alias), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_product_alias_path(@product_alias), :class => 'btn'
    = link_to t('.back', :default => t("helpers.links.back")), product_aliases_path, :class => 'btn'
  
  %h1=t '.title', :default => model_class.model_name.human.titleize

%dl.dl-horizontal
  %dt= model_class.human_attribute_name(:product_id) + ':'
  %dd= show(@product_alias.product_id)
  %dt= model_class.human_attribute_name(:alias) + ':'
  %dd= show(@product_alias.alias)
.form-actions