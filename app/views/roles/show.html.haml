- model_class = Role
.page-header
  .btn-toolbar.pull-right
    = link_to t('.new', :default => t("helpers.links.new")), new_role_path, :class => 'btn btn-primary'
    = link_to t('.destroy', :default => t("helpers.links.destroy")), role_path(@role), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_role_path(@role), :class => 'btn'
    = link_to t('.back', :default => t("helpers.links.back")), roles_path, :class => 'btn'
  
  %h1=t '.title', :default => model_class.model_name.human.titleize

%dl.dl-horizontal

  %dt= model_class.human_attribute_name(:name) + ':'
  %dd= show(@role.name)

  %dt= model_class.human_attribute_name(:global) + ':'
  %dd= show(@role.global)

.form-actions