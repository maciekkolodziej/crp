- model_class = Sale
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize
%dl.dl-horizontal
  %dt= model_class.human_attribute_name(:company_id) + ':'
  %dd= @sale.company_id
  
  %dt= model_class.human_attribute_name(:pos_id) + ':'
  %dd= @sale.pos_id

  %dt= model_class.human_attribute_name(:date) + ':'
  %dd= @sale.date
%p
  %strong= model_class.human_attribute_name(:number) + ':'
  %br
  = @sale.number
%p
  %strong= model_class.human_attribute_name(:value) + ':'
  %br
  = @sale.value
%p
  %strong= model_class.human_attribute_name(:vat) + ':'
  %br
  = @sale.vat
%p
  %strong= model_class.human_attribute_name(:net_value) + ':'
  %br
  = @sale.net_value
%p
  %strong= model_class.human_attribute_name(:card_payments) + ':'
  %br
  = @sale.card_payments
%p
  %strong= model_class.human_attribute_name(:cash_payments) + ':'
  %br
  = @sale.cash_payments
%p
  %strong= model_class.human_attribute_name(:receipt_count) + ':'
  %br
  = @sale.receipt_count
%p
  %strong= model_class.human_attribute_name(:cancelled_receipt_count) + ':'
  %br
  = @sale.cancelled_receipt_count
%p
  %strong= model_class.human_attribute_name(:cancelled_receipt_value) + ':'
  %br
  = @sale.cancelled_receipt_value
%p
  %strong= model_class.human_attribute_name(:created_by) + ':'
  %br
  = @sale.created_by
%p
  %strong= model_class.human_attribute_name(:updated_by) + ':'
  %br
  = @sale.updated_by
%p
  %strong= model_class.human_attribute_name(:created_at) + ':'
  %br
  = @sale.created_at
%p
  %strong= model_class.human_attribute_name(:updated_at) + ':'
  %br
  = @sale.updated_at

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), sales_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_sale_path(@sale), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), sale_path(@sale), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
