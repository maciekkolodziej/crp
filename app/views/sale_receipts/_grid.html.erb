<%= grid @sale_receipts_grid, allow_showing_all_records: false, show_filters: :when_filtered do |g|
  
  g.column name: 'Id', attribute: 'id', filter_type: :range do |sale_receipt|
	link_to sale_receipt.id, sale_receipt_path(sale_receipt)
  end

  g.column name: 'Sale', attribute: 'sale_id' , filter_type: :range 

  g.column name: 'Number', attribute: 'number' , filter_type: :range 

  g.column name: 'Datetime', attribute: 'datetime' 

  g.column name: 'Value', attribute: 'value' , filter_type: :range , class: 'numeric value totalled averaged'

  g.column name: 'Net value', attribute: 'net_value' , filter_type: :range , class: 'numeric net_value totalled averaged'

  g.column name: 'Cancelled', attribute: 'cancelled' 

  g.column name: 'Salesman', attribute: 'salesman_id' , filter_type: :range 

  g.action_column
  
  g.column do |sale_receipt| 
  	content = link_to t('.edit', :default => t("helpers.links.edit")), edit_sale_receipt_path(sale_receipt), :class => 'btn btn-mini';
  	content += link_to t('.destroy', :default => t("helpers.links.destroy")), sale_receipt_path(sale_receipt), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger';
  	content_tag(:div, content, class: "btn-toolbar no-margins pull-right")
  end
  
end -%>