- model_class = SaleReceipt
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:sale_id)
      %th= model_class.human_attribute_name(:number)
      %th= model_class.human_attribute_name(:datetime)
      %th= model_class.human_attribute_name(:value)
      %th= model_class.human_attribute_name(:net_value)
      %th= model_class.human_attribute_name(:cancelled)
      %th= model_class.human_attribute_name(:item_count)
      %th= model_class.human_attribute_name(:begins_at_line)
      %th= model_class.human_attribute_name(:ends_at_line)
      %th= model_class.human_attribute_name(:salesman_id)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @sale_receipts.each do |sale_receipt|
      %tr
        %td= link_to sale_receipt.id, sale_receipt_path(sale_receipt)
        %td= sale_receipt.sale_id
        %td= sale_receipt.number
        %td= sale_receipt.datetime
        %td= sale_receipt.value
        %td= sale_receipt.net_value
        %td= sale_receipt.cancelled
        %td= sale_receipt.item_count
        %td= sale_receipt.begins_at_line
        %td= sale_receipt.ends_at_line
        %td= sale_receipt.salesman_id
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_sale_receipt_path(sale_receipt), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), sale_receipt_path(sale_receipt), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_sale_receipt_path, :class => 'btn btn-primary'
