= form_for @sale_receipt, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :sale_id, :class => 'control-label'
    .controls
      = f.text_field :sale_id, :class => 'text_field'
  .control-group
    = f.label :number, :class => 'control-label'
    .controls
      = f.text_field :number, :class => 'text_field'
  .control-group
    = f.label :value, :class => 'control-label'
    .controls
      = f.text_field :value, :class => 'text_field'
  .control-group
    = f.label :net_value, :class => 'control-label'
    .controls
      = f.text_field :net_value, :class => 'text_field'
  .control-group
    = f.label :cancelled, :class => 'control-label'
    .controls
      = f.text_field :cancelled, :class => 'text_field'
  .control-group
    = f.label :salesman_id, :class => 'control-label'
    .controls
      = f.text_field :salesman_id, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), sale_receipts_path, :class => 'btn'
