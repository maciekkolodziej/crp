= form_for @sale_item, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :sale_receipt_id, :class => 'control-label'
    .controls
      = f.text_field :sale_receipt_id, :class => 'text_field'
  .control-group
    = f.label :product_id, :class => 'control-label'
    .controls
      = f.text_field :product_id, :class => 'text_field'
  .control-group
    = f.label :product_name, :class => 'control-label'
    .controls
      = f.text_field :product_name, :class => 'text_field'
  .control-group
    = f.label :quantity, :class => 'control-label'
    .controls
      = f.text_field :quantity, :class => 'text_field'
  .control-group
    = f.label :price, :class => 'control-label'
    .controls
      = f.text_field :price, :class => 'text_field'
  .control-group
    = f.label :value, :class => 'control-label'
    .controls
      = f.text_field :value, :class => 'text_field'
  .control-group
    = f.label :net_value, :class => 'control-label'
    .controls
      = f.text_field :net_value, :class => 'text_field'
  .control-group
    = f.label :vat_symbol, :class => 'control-label'
    .controls
      = f.text_field :vat_symbol, :class => 'text_field'
  .control-group
    = f.label :vat_rate, :class => 'control-label'
    .controls
      = f.text_field :vat_rate, :class => 'text_field'
  .control-group
    = f.label :line_number, :class => 'control-label'
    .controls
      = f.text_field :line_number, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), sale_items_path, :class => 'btn'
