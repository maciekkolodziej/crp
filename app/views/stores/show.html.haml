- model_class = Store
.page-header
  .btn-toolbar.pull-right
    = link_to t('.new', :default => t("helpers.links.new")), new_store_path, :class => 'btn btn-primary'
    = link_to t('.destroy', :default => t("helpers.links.destroy")), store_path(@store), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_store_path(@store), :class => 'btn'
    = link_to t('.back', :default => t("helpers.links.back")), stores_path, :class => 'btn'
      
  %h1=t '.title', :default => model_class.model_name.human.titleize

%dl.dl-horizontal

  %dt= model_class.human_attribute_name(:symbol) + ':'
  %dd= show(@store.symbol)

  %dt= model_class.human_attribute_name(:name) + ':'
  %dd= show(@store.name)
  
  %dt= model_class.human_attribute_name(:register_header) + ':'
  %dd= show(@store.register_header)
  
  %dt= model_class.human_attribute_name(:active) + ':'
  %dd= show(@store.active)
  
  %dt= model_class.human_attribute_name(:employees) + ':'
  %dd
    - if @store.employees.empty?
      = not_set
    - else
      %ul.inline
        - @store.employees.each do |user_role|
          %li= link_to(user_role.user.full_name, user_path(user_role.user)) + " (#{user_role.role.name})"

.form-actions