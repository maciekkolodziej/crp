- model_class = Unit
.page-header
  .btn-toolbar.pull-right
    = link_to t('.new', :default => t("helpers.links.new")), new_unit_path, :class => 'btn btn-primary'
    = link_to t('.destroy', :default => t("helpers.links.destroy")), unit_path(@unit), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_unit_path(@unit), :class => 'btn'
    = link_to t('.back', :default => t("helpers.links.back")), units_path, :class => 'btn'
  
  %h1=t '.title', :default => model_class.model_name.human.titleize

%dl.dl-horizontal
  %dt= model_class.human_attribute_name(:symbol) + ':'
  %dd= show(@unit.symbol)
  %dt= model_class.human_attribute_name(:name) + ':'
  %dd= show(@unit.name)
  %dt= model_class.human_attribute_name(:primary) + ':'
  %dd= show(@unit.primary)
.form-actions