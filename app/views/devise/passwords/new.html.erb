<%- @container_class = 'container-signin' %>

<%= semantic_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <h2><%= t('forgot_password?', default: [:'forgotpassword?', 'Forgot your password?']) %></h2>
  <%= f.inputs do %>
  	<%= f.input :email, :autofocus => true, label: false, placeholder: t('Email', default: 'Email') %>
  <%- end %>
  
  <%= f.actions do %>
  	<%= f.action :submit, label: t('send_instructions', default: "Send instructions"), button_html: { class: 'btn btn-primary' } %>
  <%- end %>
<% end %>
<%= render "devise/shared/links" %>
