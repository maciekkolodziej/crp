<%- @container_class = 'container-signin' %>
<%= semantic_form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post }) do |f| %>
	<h2><%= t('unlock_account', default: 'Unlock account') %></h2>
	<%= f.inputs do %>
  		<%= f.input :email, as: :email, :autofocus => true, label: false, placeholder: t('Email', default: 'Email') %>
	<%- end %>
	
	<%= f.actions do %>
  		<%= f.action :submit, label: t('send_instructions', default: "Send instructions"), button_html: { class: 'btn btn-primary' } %>
  	<%- end %>
<% end %>
<%= render "devise/shared/links" %>