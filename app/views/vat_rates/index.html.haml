- model_class = VatRate
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:symbol)
      %th= model_class.human_attribute_name(:rate)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @vat_rates.each do |vat_rate|
      %tr
        %td= link_to vat_rate.id, vat_rate_path(vat_rate)
        %td= vat_rate.symbol
        %td= vat_rate.rate
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_vat_rate_path(vat_rate), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), vat_rate_path(vat_rate), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_vat_rate_path, :class => 'btn btn-primary'
