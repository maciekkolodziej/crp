- model_class = <%= class_name %>
.page-header
  .btn-toolbar.pull-right
    = link_to t('.new', :default => t("helpers.links.new")), new_<%= singular_name %>_path, :class => 'btn btn-primary'
    = link_to t('.destroy', :default => t("helpers.links.destroy")), <%= singular_name %>_path(@<%= singular_name %>), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_<%= singular_name %>_path(@<%= singular_name %>), :class => 'btn'
    = link_to t('.back', :default => t("helpers.links.back")), <%= plural_name %>_path, :class => 'btn'
  
  %h1=t '.title', :default => model_class.model_name.human.titleize

%dl.dl-horizontal
  <%- attributes.each do |attribute| -%>
  %dt= model_class.human_attribute_name(:<%= attribute.name %>) + ':'
  %dd= show(@<%= singular_name %>.<%= attribute.name %>)
  <%- end -%>
.form-actions